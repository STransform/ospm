    <!--Tree view employee.promotion model-->
    <record id="dept_request_sales_view_tree" model="ir.ui.view">
        <field name="name">dept.request.sales.view.tree</field>
        <field name="model">dept.product.request</field>
        <field name="arch" type="xml">
            <tree string="dept_fields">
                <field name="name"/>
                <field name="sales_price"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>

