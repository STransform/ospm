<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Action of employee.promotion model-->
    <record id="dept_sales_product_request" model="ir.actions.act_window">
        <field name="name">Department product request</field>
        <field name="res_model">dept.product.request</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!--Form view employee.promotion model-->
<record id='sales_product_request_view_form' model='ir.ui.view'>
    <field name="name">sales.product.request.view.form</field>
    <field name="model">dept.product.request</field>
    <field name="arch" type="xml">
        <form string="Sales Product Request">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field class="text-break" name="name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="sales_price"/>
                        <field name="cost"/>
                        <field name="description"/>
                    </group>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="many2many_tags"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>


