<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_clearance">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<div style="text-align: center; margin-bottom: 20px;">
							<h2 style="color: #2c3e50;">
								Clearance Report
							</h2>
							<p style="font-style: italic; color: #7f8c8d;">
								Generated on:
								<span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" />
							</p>
						</div>
						<table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
							<tr style="background-color: #f7f7f7;">
								<th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
									Field
								</th>
								<th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
									Details
								</th>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Employee
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.employee_id.name" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Department
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.department_id.name" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Position
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.job_id.name" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Reason
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.employee_reason" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Description
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.clearance_description" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									State
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.state" />
								</td>
							</tr>
						</table>
						<h3 style="color: #2c3e50; margin-top: 20px;">
							Approval Status
						</h3>
						<table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
							<tr style="background-color: #f7f7f7;">
								<th style="padding: 10px; border: 1px solid #ddd;">
									Approval Level
								</th>
								<th style="padding: 10px; border: 1px solid #ddd;">
									Status
								</th>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Department Approval
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.department_approval" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Property Approval
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.property_approval" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									Finance Approval
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.finance_approval" />
								</td>
							</tr>
							<tr>
								<td style="padding: 10px; border: 1px solid #ddd;">
									HR Approval
								</td>
								<td style="padding: 10px; border: 1px solid #ddd;">
									<span t-field="o.hr_approval" />
								</td>
							</tr>
						</table>
						<!-- Footer -->
						<div style="margin-top: 30px; text-align: center;">
							<p style="font-size: 12px; color: #7f8c8d;">
								This report is auto-generated by the Clearance Management system. For any discrepancies, please contact HR.
							</p>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>
