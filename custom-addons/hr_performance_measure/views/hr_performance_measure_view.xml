<odoo>
    <!-- Performance Measure Form View -->
    <record id="view_performance_measure_form" model="ir.ui.view">
        <field name="name">hr.performance.measure.form</field>
        <field name="model">hr.performance.measure</field>
        <field name="arch" type="xml">
            <form string="Performance Evaluation">
                <header>
                    <button name="action_submit" type="object" string="Submit" class="btn-primary"
                        states="draft" />
                    <button name="action_approve" type="object" string="Approve" class="btn-success"
                        states="submitted" />
                    <button name="action_reject" type="object" string="Reject" class="btn-danger"
                        states="submitted" />
                    <!-- Statusbar Widget for Tracking Approval Process -->
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,submitted,approved" />
                </header>
                <sheet>
                    <group>
                        <field name="employee_id" required="1"
                            options="{'no_create': True, 'no_create_edit':True}" string="Employee" />
                        <field name="period_id" required="1"
                            options="{'no_create': True, 'no_create_edit':True}"
                            string="Evaluation Period" />
                        <field name="evaluation_date" required="1" string="Evaluation Date" />
                    </group>
                    <notebook>
                        <page string="Performance Criteria">
                            <field name="criteria_ids">
                                <tree editable="bottom">
                                    <field name="factor" string="Factor" />
                                    <field name="description" string="Description" />
                                    <field name="rating" required="1" string="Rating" />
                                    <field name="score" readonly="1" string="Score" />
                                </tree>
                            </field>
                        </page>
                        <page string="Summary">
                            <group>
                                <field name="total_score" readonly="1" string="Total Score" />
                                <field name="overall_rating" readonly="1" string="Overall Rating" />
                                <field name="performance_score" readonly="1"
                                    string="Performance Score" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Performance Measure Tree View -->
    <record id="view_performance_measure_tree" model="ir.ui.view">
        <field name="name">hr.performance.measure.tree</field>
        <field name="model">hr.performance.measure</field>
        <field name="arch" type="xml">
            <tree string="Performance Evaluations">
                <field name="evaluation_date" string="Evaulation Date" />
                <field name="employee_id" string="Employee" />
                <field name="total_score" string="Total Score" />
                <field name="overall_rating" string="Overall Rating" />
                <field name="state" string="Status" />
            </tree>
        </field>
    </record>

    <!-- Performance Measure Action -->
    <record id="action_performance_measure" model="ir.actions.act_window">
        <field name="name">Performance Evaluations</field>
        <field name="res_model">hr.performance.measure</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>
</odoo>