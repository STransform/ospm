<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for Performance Rating Factors -->
    <record id="action_performance_rating_factors" model="ir.actions.act_window">
        <field name="name">Performance Rating Factors</field>
        <field name="res_model">performance.rating.factor</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Manage Rating Factors used in performance evaluations.</field>
    </record>

    <!-- Tree View for Performance Rating Factors -->
    <record id="view_performance_rating_factors_tree" model="ir.ui.view">
        <field name="name">performance.rating.factor.tree</field>
        <field name="model">performance.rating.factor</field>
        <field name="arch" type="xml">
            <tree string="Performance Rating Factors">
                <field name="name" string="Factor Name" />
                <field name="description" widget="html" string="Description" />
            </tree>
        </field>
    </record>

    <!-- Form View for Performance Rating Factors -->
    <record id="view_performance_rating_factors_form" model="ir.ui.view">
        <field name="name">performance.rating.factor.form</field>
        <field name="model">performance.rating.factor</field>
        <field name="arch" type="xml">
            <form string="Performance Rating Factor">
                <sheet>
                    <group>
                        <field name="name" required="1" string="Factor Name" />
                        <field name="description" widget="html" string="Description" />
                    </group>
                    <notebook>
                        <page string="Answer Options">
                            <field name="answer_ids">
                                <tree string="Answer Options">
                                    <field name="value" string="Answer Choice" />
                                    <field name="score" string="Score" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Performance Form Templates -->
    <record id="action_performance_form_template" model="ir.actions.act_window">
        <field name="name">Performance Form Templates</field>
        <field name="res_model">performance.form.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Manage templates for performance evaluation forms.</field>
    </record>

    <!-- Tree View for Performance Form Templates -->
    <record id="view_performance_form_template_tree" model="ir.ui.view">
        <field name="name">performance.form.template.tree</field>
        <field name="model">performance.form.template</field>
        <field name="arch" type="xml">
            <tree string="Performance Form Templates">
                <field name="name" string="Template Name" />
                <field name="description" widget="html" string="Description" />
                <field name="active" string="Active" />
            </tree>
        </field>
    </record>

    <!-- Form View for Performance Form Templates -->
    <record id="view_performance_form_template_form" model="ir.ui.view">
        <field name="name">performance.form.template.form</field>
        <field name="model">performance.form.template</field>
        <field name="arch" type="xml">
            <form string="Performance Form Template">
                <sheet>
                    <group>
                        <field name="name" required="1" string="Template Name" />
                        <field name="description" widget="html" string="Description" />
                    </group>
                    <notebook>
                        <page string="Rating Factors">
                            <field name="factor_ids">
                                <tree string="Rating Factors">
                                    <field name="name" string="Factor Name" />
                                    <field name="description" widget="html" string="Description" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
