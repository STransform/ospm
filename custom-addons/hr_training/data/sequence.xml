<odoo>
    <data noupdate="1">
        <!-- Define the Sequence -->
        <record id="seq_hr_training_request" model="ir.sequence">
            <field name="name">HR Training Request</field>
            <field name="code">dept.request</field>
            <field name="prefix">Training Plan</field>
            <field name="suffix">-%(year)s</field>
        </record>

        <record id="seq_hr_training_plan" model="ir.sequence">
            <field name="name">HR Training Plan</field>
            <field name="code">hrplan.request</field>
            <field name="prefix">TR-Plan</field>
            <field name="padding">3</field>
            <field name="suffix">-%(year)s</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
