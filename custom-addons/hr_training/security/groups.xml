<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_hr_training_ceo" model="res.groups">
        <field name="name">TrainingCeo</field>
    </record>

      <record id="group_hr_training_hr_officer" model="res.groups">
        <field name="name">HR officer</field>
    </record>

    <!-- Record Rule to allow all internal users to access attachments -->
    <record id="ir_attachment_access_rule" model="ir.rule">
        <field name="name">Attachment Access for Internal Users</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/> <!-- This allows all internal users -->
    </record>

</odoo>
