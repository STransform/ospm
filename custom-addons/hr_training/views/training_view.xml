<odoo>
    <!-- Form View for Training -->
    <record id="view_training_form" model="ir.ui.view">
        <field name="name">hr.training.form</field>
        <field name="model">hr.training</field>
        <field name="arch" type="xml">
        <sheet>
        <form string="Training management">
            <header>
                <button name="action_accepted" type="object" string="Accept" groups="hr_training.group_hr_training_ceo"
                        attrs="{'invisible': [('state', 'in', ['approved', 'refused'])]}"/>
                <button name="action_refused" type="object" string="Refuse" groups="hr_training.group_hr_training_ceo"
                        attrs="{'invisible': [('state', 'in', ['approved', 'refused'])]}"/>
                <field name="state" widget="statusbar" statusbar_visible="new,approved,refused,taken"/>
            </header>
            <div class="oe_title">
                <h1 class="d-flex flex-row">
                    <field name="name" placeholder="Training Name"
                            required="True" style="font-size: min(4vw, 2.6rem);"/>
                </h1>
                </div>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name='department_id' />
                    <field name="trainer" string="Trainer"/>
                </group>
                <field placeholder="Employees" name="employee_ids" string="Employees"  widget="many2many_tags"/>
                 <div>
                 <label for="description" string="Breif Description"/>
                 </div>
                <div>
                    <span>Your training name should be descriptive and clear.</span>
                </div>
                <field name='description' string='Description'/>
                <group>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </group>
            </form>
        </sheet>
        </field>
    </record>




    <!-- Tree View for Training -->
    <record id="view_training_tree" model="ir.ui.view">
        <field name="name">hr.training.tree</field>
        <field name="model">hr.training</field>
        <field name="arch" type="xml">
            <tree string="Training Management">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="trainer"/>
                <field name="created_by"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <record id="hr_training_kanban" model="ir.ui.view">
        <field name="name">hr.training.view.kanban</field>
        <field name="model">hr.training</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div>
                                <field name="department_id"/>
                            </div>

                            <t t-if="record.state.raw_value == 'approved'">
                                <hr class="mt8 mb8"/>
                                <div class="text-success">
                                    <field name="state"/>
                                </div>
                            </t>

                            <t t-if="record.state.raw_value == 'refused'">
                                <hr class="mt8 mb8"/>
                                <div class="text-danger">
                                    <field name="state"/>
                                </div>
                            </t>

                            <t t-if="record.state.raw_value == 'taken'">
                                <hr class="mt8 mb8"/>
                                <div class="text-danger">
                                    <field name="state"/>
                                </div>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!-- Action to Open the Views -->
    <record id="hr_training_action" model="ir.actions.act_window">
        <field name="name">Training Management</field>
        <field name="res_model">hr.training</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_training_tree"/>
    </record>

    <record id="training_dashboard_action" model='ir.actions.client'>
        <field name="name">Training Dashboard</field>
        <field name='tag'>hr_training.dashboard</field>
    </record>
</odoo>
