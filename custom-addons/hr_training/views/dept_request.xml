<odoo>
    <!-- Form View for Training -->
    <record id="training_request_form" model="ir.ui.view">
        <field name="name">hr.training.request.form</field>
        <field name="model">dept.request</field>
        <field name="arch" type="xml">
            <form string="Training Request">
                <header>
                    <button name="action_request_approval" string="Request Training" type="object" class="btn-primary"   groups="hr_training.group_hr_training_department_director" attrs="{'invisible': [('state', 'in', ['requested', 'approved'])]}"/>
                    <button name="action_approve_request" string="Approve" type="object" class="btn-primary"   groups="hr_training.group_hr_training_hr_officer" attrs="{'invisible': [('state', 'in', ['draft', 'approved', 'refused'])]}"/>
                    <button name="action_refuse_request" string="Refuse" type="object" class="btn-primary"   groups="hr_training.group_hr_training_hr_officer" attrs="{'invisible': [('state', 'in', ['draft', 'approved', 'refused'])]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,refused"/>
                </header>
                <sheet>
                    <h1 class="d-flex flex-row">
                        <field name="name" placeholder="Request Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                    </h1>
                    <group>
                        <field name='department_id' />
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                    <div>
                        <span>Your training description should be descriptive and clear.</span>
                    </div>
                    <field name='description' string='Description'/>


                    <notebook>
                        <page string="Training Programs">
                            <field name="training_programs">
                               <tree >  <!--  editable="bottom"-->
                                    <field name="program_name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="employee_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Tree View for Training -->
    <record id="view_training_tree" model="ir.ui.view">
        <field name="name">hr.training.request.tree</field>
        <field name="model">dept.request</field>
        <field name="arch" type="xml">
            <tree string="Training Management">
                <field name="name"/>
                <field name='department_id' />
            </tree>
        </field>
    </record>
