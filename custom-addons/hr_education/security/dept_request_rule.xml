<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dept_request_rule_creator" model="ir.rule">
        <field name="name">Education Dept Request: Created User Access</field>
        <field name="model_id" ref="model_education_department_request"/>
        <field name="domain_force">[('is_department_manager', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="dept_request_rule_hr_manager" model="ir.rule">
        <field name="name">Education Dept Request: HR Manager Access</field>
        <field name="model_id" ref="model_education_department_request"/>
        <field name="domain_force">[('state', '!=', "draft")]</field>
        <field name="groups" eval="[(4, ref('user_group.group_hr_director'))]"/>
    </record>

    <record id="hr_education_request_rule_creator" model="ir.rule">
        <field name="name">Hr Education Request: Created User Access</field>
        <field name="model_id" ref="model_hr_education_request"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('user_group.group_hr_director'))]"/>
    </record>

    <record id="hr_education_request_rule_planning_director" model="ir.rule">
        <field name="name">Hr Education Request: Planning Director Access</field>
        <field name="model_id" ref="model_hr_education_request"/>
        <field name="domain_force">[('state', '!=', "draft")]</field>
        <field name="groups" eval="[(4, ref('user_group.group_planning_directorate'))]"/>
    </record>
    
    <record id="hr_education_request_rule_ceo" model="ir.rule">
        <field name="name">Hr Education Request: CEO Access</field>
        <field name="model_id" ref="model_hr_education_request"/>
        <field name="domain_force">[('state', '!=', "draft")]</field>
        <field name="groups" eval="[(4, ref('user_group.group_ceo'))]"/>
    </record>
</odoo>


