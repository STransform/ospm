<odoo>
    <!-- Form View for Education -->
    <record id="hr_office_education_request_form" model="ir.ui.view">
        <field name="name">hr.office.education.request.form</field>
        <field name="model">hr.education.request</field>
        <field name="arch" type="xml">

            <form string="HR Office Education Request">
              <header>
                    <!-- Submit button for the HR Office  -->
                    <button name="action_submit" 
                            type="object" 
                            string="Submit" 
                            groups="user_group.group_hr_director" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-success"
                            confirm="Are You sure you want to Submit the Plan"
                            />

                    <button name="action_resubmit" 
                            type="object" 
                            string="Resubmit" 
                            groups="user_group.group_hr_director" 
                            attrs="{'invisible': [('state', '!=', 'rejected')]}"
                            class="btn-success"
                            confirm="Are You sure you want to Resubmit the Plan"
                            />

                    <!-- approval by planning directorte -->
                    <button name="action_approve_planning" 
                            type="object" 
                            string="Approved" 
                            groups="user_group.group_planning_directorate" 
                            attrs="{'invisible': [('state', '!=','submitted')]}"
                            class="btn-success"
                            confirm="Are you sure you want to Approve the request?"
                            />

                    <button name="action_reject_planning" 
                            type="object" 
                            string="Reject" 
                            groups="user_group.group_planning_directorate" 
                            attrs="{'invisible': [('state', '!=','submitted')]}"
                            confirm="Are you sure you want to Reject the request?"
                            class="btn-danger"
                            />

                    <!-- approval by ceo -->
                    <button name="action_approve_ceo" 
                            type="object" 
                            string="Approved" 
                            groups="user_group.group_ceo" 
                            attrs="{'invisible': [('state', '!=','planning_approved')]}"
                            class="btn-success"
                            confirm="Are you sure you want to Approve the request?"
                            />
                    <button name="action_reject_ceo" 
                            type="object" 
                            string="Reject" 
                            groups="user_group.group_ceo" 
                            attrs="{'invisible': [('state', '!=','planning_approved')]}"
                            confirm="Are you sure you want to Reject the request?"
                            class="btn-danger"
                            />
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,planning_approved,approved,rejected"/>

              </header>
                <sheet>
                    <h1 class="d-flex flex-row">
                        <field name="name" placeholder="Request Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                    </h1>
                    <group>
                        <field name="year" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="total_employee_count" readonly="1"/>
                    </group>
                    <div>
                        <strong>Description</strong>
                    </div>
                    <field name='description' string='Description' placeholder="Your education description should be descriptive and clear." attrs="{'readonly':[('is_editable','=',False)]}"/>
                    <group>
                        <field name="state" invisible="1"/>
                        <field name="planning_reason_is_visible" invisible="1"/>
                        <field name="combined_state" invisible="1"/>
                        <field name="ceo_reason_is_visible" invisible="1"/>
                        <field name="is_ceo" invisible="1"/>
                        <field name="is_planning" invisible="1"/>
                        <field name="is_hr_office" invisible="1" />
                        <field name="is_editable" invisible="1"/>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary" attrs="{'readonly':[('is_editable','=',False)]}"/>
                        <field name="planning_reason" attrs="{'invisible':[('planning_reason_is_visible','=',False)], 'readonly':['|',('is_planning','=',False),('state','!=','submitted')]}"/>
                        <field name="ceo_reason" attrs="{'invisible':[('ceo_reason_is_visible','=',False)], 'readonly':['|',('is_ceo','=',False),('state','!=','planning_approved')]}"/>
                    </group>
                    <notebook>
                        <page string="Education Programs">
                            <field name="education_programs" attrs="{'readonly':[('is_editable','=',False)]}">
                               <tree >
                                    <field name="program_name"/>
                                    <field name="departement_id"/>
                                    <field name="employee_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Tree View for Education -->
    <record id="hr_office_education_tree" model="ir.ui.view">
        <field name="name">hr.office.eduction.request.tree</field>
        <field name="model">hr.education.request</field>
        <field name="arch" type="xml">
            <tree string="Education Management">
                <field name="name"/>
                <field name="year" />
                <field name="total_employee_count" />
            </tree>
        </field>
    </record>
    <record id="view_hr_education_request_kanban" model="ir.ui.view">
        <field name="name">hr.education.request.kanban</field>
        <field name="model">hr.education.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="combined_state" quick_create='false'>
                <field name="combined_state"/>
                <field name="name"/>
                <field name="description"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
                            
                            <div>
                                <field name="combined_state"/>
                            </div>
                            
                            
                            <div>
                                <field name="description" widget="text"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Action to Open the Views -->
    <record id="hr_office_request_action" model="ir.actions.act_window">
        <field name="name">HR Office Education Plan</field>
        <field name="res_model">hr.education.request</field>
        <field name="view_mode">kanban,tree,form</field>
        
    </record>

</odoo>
