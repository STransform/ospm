<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_medical_coverage">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Report Header -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="color: #2c3e50;">Medical Coverage Report</h2>
                            <p
                                style="font-style: italic; color: #7f8c8d;"> Generated on: <span
                                    t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" />
                            </p>
                            ` </div>

                        <!-- Medical Coverage Details -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Field</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Details</th>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Employee</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.create_uid.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Description</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.description" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">HR Comment</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.hr_comment" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Finance Comment</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.finance_comment" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Status</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.status" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Total Requested
                                    Amount</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.totalRequestedAmount" />
                                </td>
                            </tr>
                        </table>

                        <!-- Medical Costs Details -->
                        <h3 style="color: #2c3e50; margin-top: 20px;">Medical Costs Items</h3>
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; border: 1px solid #ddd;">Provider Type</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Provider Category</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Provider Name</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Description</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Date</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Amount</th>
                            </tr>
                            <t t-foreach="o.costItemIds" t-as="item">
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.providerType" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.providerCategory" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.providerName" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.description" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.date" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="item.amount" />
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <!-- Footer -->
                        <div style="margin-top: 30px; text-align: center;">
                            <p style="font-size: 12px; color: #7f8c8d;">
                                This report is auto-generated by the Medical Coverage system. For
                                any discrepancies, please contact HR.
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_medical_coverage_credit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Report Header -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="color: #2c3e50;">Credit Report</h2>
                            <p style="font-style: italic; color: #7f8c8d;">Generated on: <span
                                    t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" /></p>
                        </div>

                        <!-- Credit Details -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Field</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Details</th>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Employee Name</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.create_uid.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Description</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.description" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Organization</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.organization_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">HR Comment</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.hr_comment" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Status</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.status" />
                                </td>
                            </tr>
                        </table>

                        <!-- Footer -->
                        <div style="margin-top: 30px; text-align: center;">
                            <p style="font-size: 12px; color: #7f8c8d;">
                                This report is auto-generated by the Credit system. For any
                                discrepancies, please contact HR.
                            </p>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>
</odoo>