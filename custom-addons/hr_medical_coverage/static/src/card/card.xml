<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="hr_medical_coverage.Card" owl="1">
        <div class="col-lg-4 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center cursor-pointer" t-on-click="()=>props.onClick()">
                <div class="h1 fw-bold text-dark" style="font-size:48px">
                    <span t-esc="props.value"></span>
                </div>
                <div class="h3 text-muted">
                    <span t-esc="props.name"></span>
                </div>
                <div class="h3 mt-5">
                    <!-- Dynamically apply text color based on prop -->
                    <span t-attf-class="{{ props.textColor }}">
                        <span class="fa fa-arrow-up"></span>
                        <span t-esc="props.category"></span>
                    </span>
                </div>
            </div>
        </div>
    </t>
</templates>
