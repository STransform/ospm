<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view -->
    <record id="hr_medical_coverage_organization_view_form" model="ir.ui.view">
        <field name="name">hr_medical_coverage_organization.view.form</field>
        <field name="model">hr.medical.coverage.organization</field>
        <field name="arch" type="xml">
            <form string="Medical Organization">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="name" />
                            <field name="organization_type" />
                            <field name="organization_category" />
                            <field name="location" />
                        </group>
                        <group>
                            <field name="phone_number" />
                            <field name="email_address" />
                            <field name="website" />
                            <field name="emergency_contact_phone" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- tree view -->
    <record id="hr_medical_coverage_organization_view_tree" model="ir.ui.view">
        <field name="name">hr_medical_coverage_organization.view.tree</field>
        <field name="model">hr.medical.coverage.organization</field>
        <field name="arch" type="xml">
            <tree string="Medical Organization">
                <field name="name" />
                <field name="organization_type" />
                <field name="organization_category" />
                <field name="location" />
                <field name="phone_number" />
                <field name="email_address" />
                <field name="emergency_contact_phone" />
                <field name="website" />
            </tree>
        </field>
    </record>

</odoo>