<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="Notification" owl="1">
        <div class="NavbarMenuContainer">
            <div class="o_NavbarMenu dropdown">
                <a class="o_NavbarMenu_toggler dropdown-toggle o-no-caret o-dropdown--narrow" href="#" title="Notifications" role="button" aria-haspopup="true" t-on-click="onClickNavbarMenu">
                    <i class="o_NavbarMenu_icon fa fa-lg fa-bell" role="img" aria-label="NavbarMenu" />
                    <t t-if="state.unreadCount">
                        <span class="badge" t-esc="state.unreadCount"/>
                    </t>
                </a>

                <!-- Show dropdown only if showDropdown is true -->
                
                <t t-if="state.showDropdown">
                    <div class="o_MessagingMenu_dropdownMenu o-dropdown-menu dropdown-menu-end d-flex flex-column mt-0 py-0 bg-view overflow-auto"  role="menu">
                        <t t-if="state.notifications.length">
                            <t t-foreach="state.notifications" t-as="notification" t-key="notification.id">
                                <div class="dropdown-item notification-item d-flex align-items-start py-2" t-on-click="() => onClickNotification(notification)">
                                    <div class="icon-container me-2">
                                        <i class="fa fa-bell text-primary" role="img" aria-label="Notification Icon"></i>
                                    </div>
                                    <div class="content">
                                        <strong class="title text-truncate d-block mb-1" t-esc="notification.title" />
                                        <p class="message text-muted small mb-0" t-esc="notification.message" />
                                    </div>
                                    <div class="time ms-auto text-muted small">
                                        <t t-esc="dayjs(notification.create_date).fromNow()" />
                                    </div>
                                </div>
                            </t>
                        </t>
                        <t t-else="">
                            <div class="dropdown-item">
                                <p>No new notifications</p>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
