<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hr_salary_increment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Report Header -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="color: #2c3e50;">Salary Increment Batch Report</h2>
                            <p style="font-style: italic; color: #7f8c8d;">Generated on: <span
                                    t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" /></p>
                        </div>

                        <!-- Summary Section -->
                        <h3 style="color: #2c3e50; margin-bottom: 10px;">Batch Summary</h3>
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Batch Name</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Start Date</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.start_date" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">End Date</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.end_date" />
                                </td>
                            </tr>
                            <tr t-if="o.increment_line_ids">
                                <td style="padding: 10px; border: 1px solid #ddd;">Total Employees</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-esc="len(o.increment_line_ids)" />
                                </td>
                            </tr>

                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">State</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.state" />
                                </td>
                            </tr>
                            <tr t-if="o.state == 'rejected'">
                                <td style="padding: 10px; border: 1px solid #ddd;">Rejection Reason</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.rejection_reason" />
                                </td>
                            </tr>
                        </table>

                        <!-- Increment Details -->
                        <h3 style="color: #2c3e50; margin-bottom: 10px;">Increment Details</h3>
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Employee</th>

                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Steps</th>

                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Current
                                    Wage</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">New
                                    Wage</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Eligibility</th>
                            </tr>
                            <tr t-foreach="o.increment_line_ids" t-as="line">
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="line.employee_id.name" />
                                </td>

                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="line.steps" />
                                </td>

                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="line.current_wage" />
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="line.new_wage" />
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-if="line.is_eligible">Yes</span>
                                    <span t-if="not line.is_eligible">No</span>
                                </td>
                            </tr>
                        </table>

                        <!-- Footer -->
                        <div style="margin-top: 30px; text-align: center;">
                            <p style="font-size: 12px; color: #7f8c8d;">
                                This report is auto-generated by the Salary Increment system. For
                                any discrepancies, please contact HR.
                            </p>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>
</odoo>