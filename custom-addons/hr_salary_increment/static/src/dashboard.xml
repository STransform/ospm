<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_salary_increment_employee.Dashboard" owl="1">
        <div class="container vh-100 overflow-auto bg-light py-3">
            <div class="row mb-3">
                <div class="col-auto">
                    <label class="form-label">Look Back Period (Days):</label>
                    <input type="number" class="form-control" t-model="state.period" t-on-change="loadIncrementHistory"/>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <canvas id="approverChart" width="400" height="200"></canvas>
                </div>
                <div class="col-md-6 mb-3">
                    <canvas id="monthlyChart" width="400" height="200"></canvas>
                </div>
            </div>

            <!-- Increment History Table -->
            <t t-if="state.incrementHistory.length">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Employee</th>
                            <th>Increment Date</th>
                            <th>Approved By</th>
                            <th>From Increment</th>
                            <th>To Increment</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.incrementHistory" t-as="line" t-key="line.id">
                            <tr>
                                <td>
                                    <t t-esc="line.employee_id ? line.employee_id[1] : 'Unknown'"/>
                                </td>
                                <td>
                                    <t t-esc="line.increment_date"/>
                                </td>
                                <td>
                                    <t t-esc="line.approved_by ? line.approved_by[1] : 'Unknown'"/>
                                </td>
                                <td><t t-esc="line.from_increment_name || ''"/></td>
                                <td><t t-esc="line.to_increment_name || ''"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
            <t t-else="">
                <div class="alert alert-info" role="alert">
                    No increment history found for the selected period.
                </div>
            </t>
        </div>
    </t>
</templates>
