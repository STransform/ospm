<odoo>
    <!-- Action for Salary Increment -->
    <record id="hr_salary_increment_action" model="ir.actions.act_window">
        <field name="name">Salary Increment</field>
        <field name="res_model">hr.salary.increment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- Kanban View for Salary Increment -->
    <record id="hr_salary_increment_view_kanban" model="ir.ui.view">
        <field name="name">hr.salary.increment.kanban</field>
        <field name="model">hr.salary.increment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="state" />
                <field name="employee_name" />
                <field name="job_title" />
                <field name="is_eligible" />
                <field name="pay_grade_id" />
                <field name="current_wage" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="employee_name" /></strong>
                                <div><field name="job_title" /></div>
                                <div>Pay Grade: <field name="pay_grade_id" /></div>
                                <div>Current Wage: <field name="current_wage" /></div>
                                <div>Eligible: <field name="is_eligible" /></div>
                                <div>Status: <field name="state" /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View for Salary Increment -->
    <record id="hr_salary_increment_view_tree" model="ir.ui.view">
        <field name="name">hr.salary.increment.tree</field>
        <field name="model">hr.salary.increment</field>
        <field name="arch" type="xml">
            <tree string="Salary Increment">
                <field name="employee_id" />
                <field name="pay_grade_id" />
                <field name="current_wage" />
                <field name="suggested_increment_level_id" />
                <field name="next_increment_level_id" />
                <field name="new_wage" />
                <field name="average_score" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Form View for Salary Increment -->
    <record id="view_hr_salary_increment_form" model="ir.ui.view">
        <field name="name">hr.salary.increment.form</field>
        <field name="model">hr.salary.increment</field>
        <field name="arch" type="xml">
            <form string="Salary Increment">
                <header>
                    <button name="action_submit" type="object" string="Submit Request"
                        class="btn-primary" states="draft" />
                    <button name="action_approve" type="object" string="Approve"
                        class="btn-success" states="submitted" />
                    <button name="action_reject" type="object" string="Reject"
                        class="btn-danger" states="submitted" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,submitted,approved,rejected" />
                </header>
                <sheet>
                    <group col="2">
                        <!-- Employee and Contract Information -->
                        <group>
                            <field name="employee_id" required="1" />
                            <field name="contract_id" readonly="1" />
                            <field name="pay_grade_id" readonly="1" />
                            <field name="current_wage" readonly="1" />
                            <field name="current_increment_level_id" readonly="1" />
                        </group>
                        <!-- Increment Details -->
                        <group>
                            <field name="suggested_increment_level_id" readonly="1"
                                string="Suggested Increment Level" />
                            <field name="next_increment_level_id" required="1"
                                string="Final Increment Level" />
                            <field name="new_wage" readonly="1" />
                            <field name="average_score" readonly="1" />
                            <field name="is_eligible" readonly="1" />
                        </group>
                    </group>
                    <group>
                        <field name="remarks" widget="text" placeholder="Add remarks or notes here..." />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
