<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <!-- rejection confirmation view -->
    <record id="view_hr_salary_increment_batch_rejection_wizard_form" model="ir.ui.view">
        <field name="name">hr.salary.increment.batch.rejection.wizard.form</field>
        <field name="model">hr.salary.increment.batch.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Salary Increment Batch">
                <group>
                    <field name="rejection_reason" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_rejection"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
