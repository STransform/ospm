<odoo>

    <!-- PAY GRADE FORM VIEW -->
    <record id="view_pay_grade_form" model="ir.ui.view">
        <field name="name">hr.pay.grade.form</field>
        <field name="model">hr.pay.grade</field>
        <field name="arch" type="xml">
            <form string="Pay Grade">
                <sheet>
                    <group>
                        <field name="job_position_id" required="1" />
                        <field name="grade_name" required="1" />
                        <field name="salary" required="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PAY GRADE TREE VIEW -->
    <record id="view_pay_grade_tree" model="ir.ui.view">
        <field name="name">hr.pay.grade.tree</field>
        <field name="model">hr.pay.grade</field>
        <field name="arch" type="xml">
            <tree string="Pay Grades">
                <field name="job_position_id" />
                <field name="grade_name" />
                <field name="salary" />
            </tree>
        </field>
    </record>

    <!-- PAY GRADE ACTION -->
    <record id="action_pay_grade" model="ir.actions.act_window">
        <field name="name">Pay Grades</field>
        <field name="res_model">hr.pay.grade</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Pay Grade Menu under HR Configuration -->
    <menuitem id="menu_pay_grade" parent="hr.menu_human_resources_configuration" name="Pay Grades"
        action="action_pay_grade" sequence="30" />

    <!-- CONTRACT FORM VIEW WITH PAY GRADE IN SALARY INFORMATION SECTION -->
    <record id="view_contract_form_pay_grade" model="ir.ui.view">
        <field name="name">hr.contract.form.pay.grade</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
        <field name="arch" type="xml">
            <field name="contract_type_id" position="before">
                <field name="pay_grade_id" />
            </field>
        </field>
    </record>
</odoo>