<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_hr_retirement_extension_request_tree" model="ir.ui.view">
        <field name="name">hr.retirement.extension.request.tree</field>
        <field name="model">hr.retirement.extension.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_name"/>
                <field name="current_retirement_date"/>
                <field name="proposed_new_retirement_date"/>
                <field name="extension_period_months"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_retirement_extension_request_form" model="ir.ui.view">
        <field name="name">hr.retirement.extension.request.form</field>
        <field name="model">hr.retirement.extension.request</field>
        <field name="arch" type="xml">
            <form string="Retirement Extension Request">
                <sheet>
                    <header class="mb-2">
                        <button string="Submit" name="action_submit" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button string="Approve" name="action_approve" type="object" class="oe_highlight" groups="planning.group_ceo" attrs="{'invisible':[('state','!=','submitted')]}"/>
                        <button string="Reject" name="action_reject" type="object" class="oe_highlight" groups="planning.group_ceo" attrs="{'invisible':[('state','!=','submitted')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                    </header>
                    <group>
                        <field name="employee_id" invisible="1"/>
                        <field name="user_can_comment" invisible="1" />
                    </group>
                    <sheet>
                        <group>
                            <field name="employee_name" readonly="1"/>
                            <field name="current_retirement_date" readonly="1"/>
                            <field name="proposed_new_retirement_date" readonly="1"/>
                            <field name="extension_period_months" required="1"/>
                            <field name="extension_reason" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="request_date" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="comment"  attrs="{'readonly':[('user_can_comment','=',False)]}"/>
                            <field name="attachment_ids" widget="many2many_binary"  attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>



    <record id="hr_retirement_extension_requests_action" model="ir.actions.act_window">
        <field name="name">Hr. Retirement Extension Requests</field>
        <field name="res_model">hr.retirement.extension.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                Submit and track requests for early retirement.
            </p>
        </field>
    </record>

</odoo>
