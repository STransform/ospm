<odoo>
    <!-- Module Category -->
    <record id="bonus_managment" model="ir.module.category">
        <field name="name">Bonus Managment</field>
    </record>

    <!-- Groups -->
    <record id="hr_bonus_managment.group_work_unit_manager" model="res.groups">
        <field name="name">Work Unit Manager</field>
        <field name="category_id" ref="bonus_managment" />
    </record>
    <record id="hr_bonus_managment.group_hr_officer" model="res.groups">
        <field name="name">HR Officer</field>
        <field name="category_id" ref="bonus_managment" />
    </record>

    <!-- Rule: HR Director Rule -->
    <record id="bonus_managment_work_unit_manager_rule" model="ir.rule">
        <field name="name">Bonus Work Unit Manager Rule</field>
        <field name="model_id" ref="model_hr_bonus_managment" />
        <field name="groups" eval="[(4, ref('hr_bonus_managment.group_work_unit_manager'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="0" />
    </record>

    <!-- Rule: HR Officer Rule -->
    <record id="bonus_managment_hr_office_rule" model="ir.rule">
        <field name="name">Bonus HR Officer Rule</field>
        <field name="model_id" ref="model_hr_bonus_managment" />
        <field name="groups" eval="[(4, ref('hr_bonus_managment.group_hr_officer'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="0" />
    </record>
</odoo>
