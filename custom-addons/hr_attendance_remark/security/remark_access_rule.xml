<odoo>
    <data noupdate="1">
        <!-- Record Rule: Restrict Remarks by Employee -->
        <record id="hr_attendance_remark_rule_employee" model="ir.rule">
            <field name="name">Restrict Remarks by Employee</field>
            <field name="model_id" ref="model_hr_attendance_remark"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_remark_approval_by_manager" model="ir.rule">
            <field name="name">Remark approval Request: Only Manager Access</field>
            <field name="model_id" ref="model_hr_attendance_remark"/>
            <field name="domain_force">[('manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
