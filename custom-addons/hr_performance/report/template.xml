<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- this for performance -->
    <template id="report_performance">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Report Header -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="color: #2c3e50;">Performance Evaluation Report</h2>
                            <p style="font-style: italic; color: #7f8c8d;">Generated on: <span
                                    t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" /></p>
                        </div>

                        <!-- Performance Evaluation Details -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Field</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Details</th>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Employee</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.employee_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Manager</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.manager_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Evaluation Status</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.evaluation_status" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Total Score</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.total_score" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Employee Comment</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.employee_comment" />
                                </td>
                            </tr>
                        </table>

                        <!-- Evaluation Answers -->
                        <h3 style="color: #2c3e50; margin-top: 20px;">Evaluations</h3>
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; border: 1px solid #ddd;">Question</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Answer</th>
                            </tr>
                            <t t-foreach="o.answer_ids" t-as="answer">
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="answer.question" />
                                    </td>
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <span t-field="answer.answer" />
                                    </td>
                                </tr>
                            </t>
                        </table>

                        <!-- Footer -->
                        <div style="margin-top: 30px; text-align: center;">
                            <p style="font-size: 12px; color: #7f8c8d;">
                                This report is auto-generated by the Performance Evaluation system.
                                For any discrepancies, please contact HR.
                            </p>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>
    <!-- this is for schedule -->
    <template id="report_performance_schedule">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Report Header -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="color: #2c3e50;">Evaluation Schedule Report</h2>
                            <p style="font-style: italic; color: #7f8c8d;">Generated on: <span
                                    t-esc="time.strftime('%Y-%m-%d %H:%M:%S')" /></p>
                        </div>

                        <!-- Evaluation Schedule Details -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                            <tr style="background-color: #f7f7f7;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Field</th>
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                                    Details</th>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Name</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">From Date</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.from_date" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">To Date</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.to_date" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">Deadline</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.scheduled_date" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;">State</td>
                                <td style="padding: 10px; border: 1px solid #ddd;">
                                    <span t-field="o.state" />
                                </td>
                            </tr>
                        </table>

                        <!-- Footer -->
                        <div style="margin-top: 30px; text-align: center;">
                            <p style="font-size: 12px; color: #7f8c8d;">
                                This report is auto-generated by the Evaluation Schedule system. For
                                any discrepancies, please contact HR.
                            </p>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>
</odoo>